<Pages>:
    day_day_spinner: spinner_day
    month_month_spinner: spinner_month
    rubel_money: quantity_rubel
    kopeyka_money: quantity_kopeyka
    comment_comment: comments_input
    BoxLayout:
        id: root_vertical_box
        orientation: "vertical"
        size: root.size
        BoxLayout:
            id: Spinner_current_day_month
            size_hint: 1, .25
            BoxLayout:
                spacing: 10
                padding: 10
                Spinner:
                    id: spinner_day
                    size_hint: .1, 1
                    font_size: 40
                    text: root.day_spinner_str
                    values: map(str,list(range(1,root.quantity_day_property)))
                    on_text: root.work_spinner_day_month()

                Spinner:
                    id: spinner_month
                    pos_hint: {"left":1,"top":1}
                    size_hint: .4, 1
                    font_size: 40
                    text: root.month_spinner
                    values: root.all_month_list
                    #on_text: root.install_date_spinner_day(self.text)
                    on_text: root.work_spinner_day_month()
        BoxLayout:
            size_hint: 1, .2
            Label:
                id: Label_amount_date
                #text: "На дату:\n"+' '.join(root.label_month_lst)
                markup: True
                text: f"На дату  [b]{' '.join(root.label_month_lst)}[/b] сумма: [b]{root.input_rubel_for_label}[/b]руб [b]{root.input_kopeyka_for_label}[/b]коп"
                font_size: 30
                color: 0,0,0
        BoxLayout:
            size_hint: 1, .4
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoneyRub:
                            id: quantity_rubel
                            size_hint: .5,1
                            font_size: 60
                            text: root.input_rubel
                            text_size: self.size
                            multiline: False
                            #on_text: root.check_len_text(self.text)
                            on_focus: root.focus_textinput(self,args[1],self.text)

                        Label:
                            text: "РУБ"
                            size_hint: .5,1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.2
                        text: ""
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoneyKop:
                            id: quantity_kopeyka
                            size_hint: .3, 1
                            font_size: 60
                            text: root.input_kopeyka
                            multiline: False
                            on_focus: root.focus_textinput(self,args[1],self.text)
                        Label:
                            text: "КОП"
                            size_hint: 1, 1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.2
                        text: ""
        BoxLayout:
            size_hint: 1,.3
            padding: 10
            Button:
                text: "Посмотреть статистику"
                font_size: 40
        BoxLayout:
            size_hint:1,.3
            padding: [10,0,10,0]
            TextInput:
                id: comments_input
                size_hint: 1,1
                font_size: 50
                hint_text: f"\n{(5*'\t')}Чай,сахар,булка"


        BoxLayout:
            size_hint:1,.1
            Label:
                text: root.label_save_txt
                font_size: 40
                color: 1,0,0
                bold: True
        BoxLayout:
            size_hint:1,.3
            pos_hint: {"y":"bottom"}
            padding: 10
            spacing: 10
            Button:
                text: "Сохранить"
                font_size: 50
                color: 0,0,0
                on_press: root.save_changes()
            Button:
                text: "Выход"
                font_size: 50
                color: 0,0,0
                on_release: app.quit_program()
        BoxLayout:
            size_hint: 1,.03
            padding:[0,10,0,10]
            Label:
                markup: True
                text: 'автор: Погодаев Илья Сергеевич [color=#0B0080][b] [ref=post]ilya1880@mail.ru[/ref][/b][/color]'

                color: 0,0,0







