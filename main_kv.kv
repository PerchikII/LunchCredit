<Pages>:
    day_day_spinner: spinner_day
    month_month_spinner: spinner_month
    rubel_money: quantity_rubel
    kopeyka_money: quantity_kopeyka
    comment_comment: comments_input
    BoxLayout:
        id: root_vertical_box
        orientation: "vertical"
        size: root.size
        BoxLayout:
            size_hint: 1, .25
            BoxLayout:
                spacing: 10
                padding: 10
                Spinner:
                    id: spinner_day
                    size_hint: .1, 1
                    font_size: 100
                    text: root.day_spinner_str
                    values: map(str,list(range(1,root.quantity_day_property)))
                    on_text: root.work_spinner_day_month()

                Spinner:
                    id: spinner_month
                    pos_hint: {"left":1,"top":1}
                    size_hint: .4, 1
                    font_size: 100
                    text: root.month_spinner
                    values: root.all_month_list
                    #on_text: root.install_date_spinner_day(self.text)
                    on_text: root.work_spinner_day_month()
        BoxLayout:
            size_hint: 1, .2
            Label:
                id: Label_amount_date
                markup: True
                font_size: 47
                text_size: self.size
                halign: "center"
                valign: "center"
                text:
                    f"На дату  [b]{' '.join(root.label_month_lst)}[/b] сумма:[color=#ed0d0d][b]{root.input_rubel_for_label}[/b][/color] руб [b][color=#ed0d0d]{root.input_kopeyka_for_label}[/b][/color]коп"
                color: 0,0,0
        BoxLayout:
            size_hint: 1, .3
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoneyRub:
                            id: quantity_rubel
                            size_hint: .44,1
                            font_size: 100
                            text: root.input_rubel
                            text_size: self.size
                            multiline: False
                            on_focus: root.focus_textinput(self,args[1],self.text)

                        Label:
                            text: "РУБ"
                            size_hint: .5,1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.22

            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoneyKop:
                            id: quantity_kopeyka
                            size_hint: .4, 1
                            font_size: 100
                            text: root.input_kopeyka
                            multiline: False
                            on_focus: root.focus_textinput(self,args[1],self.text)
                        Label:
                            text: "КОП"
                            size_hint: 1, 1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.22

        BoxLayout:
            size_hint:1,.3
            padding: [10,0,10,0]
            TextInput:
                id: comments_input
                size_hint: 1,1
                font_size: 50
                hint_text: f"\tЧай,вода,пивас,ганджубас.\n\t\tКомментарий, короче."


        BoxLayout:
            size_hint: 1,.3
            padding: 10
            Button:
                text: "Посмотреть статистику\n  за выбранный месяц"
                font_size: 70
                text_size: self.size
                halign: "center"
                valign: "center"
                on_press: root.load_slide(root.next_slide)





        BoxLayout:
            size_hint:1,.1
            Label:
                text: root.label_save_txt
                font_size: 40
                color: "#0B0080"
                bold: True
        BoxLayout:
            size_hint:1,.3
            pos_hint: {"y":"bottom"}
            padding: 10
            spacing: 10
            Button:
                text: "Сохранить"
                font_size: 70
                color: 0,0,0
                on_press: root.save_changes()
            Button:
                text: "Выход"
                font_size: 90
                color: 0,0,0
                on_release: app.quit_program()
        BoxLayout:
            size_hint: 1,.1
            padding:[0,10,0,10]
            Label:
                markup: True
                text: 'автор: Погодаев Илья Сергеевич [color=#0B0080][b] [ref=post]ilya1880@mail.ru[/ref][/b][/color]'
                text_size: self.size
                halign: "center"
                color: 0,0,0

<Pages>:
    scroll_two_page: box_container
    label_total_amount_two_page:label_total
    BoxLayout:
        orientation: "vertical"
        padding: 10
        size_hint: 1,1
        BoxLayout:
            id: box_container
            orientation: "vertical"
            size_hint: 1,.9
            padding: 20
            canvas:
                Color:
                    rgb:  192/255, 214/255, 228/255
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            size_hint: 1,.1
            Label:
                id: label_total
                font_size: 100
                #size_hint: 1,.1
                color: 0,0,0
                text: "Сумма"
        BoxLayout:
            size_hint: 1,.05
            Label:
                markup: True
                text: 'автор: Погодаев Илья Сергеевич [color=#0B0080][b] [ref=post]ilya1880@mail.ru[/ref][/b][/color]'
                text_size: self.size
                halign: "center"
                color: 0,0,0
















