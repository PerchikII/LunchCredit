<Pages>:
    BoxLayout:
        id: root_vertical_box
        orientation: "vertical"
        size: root.size
        BoxLayout:
            id: Spinner_current_day_month
            size_hint: 1, .25
            BoxLayout:
                id: boxlayout_day
                spacing: 10
                padding: 10
                Spinner:
                    id: spinner_day
                    size_hint: .1, 1
                    font_size: 40
                    text: root.day_spinner
#                    values: map(str,list(range(1,root.quantity_day_property)))
#                    on_text: root.create_a_date_for_label_and_key_for_dict(self)
                Spinner:
                    id: spinner_month
                    pos_hint: {"left":1,"top":1}
                    size_hint: .4, 1
                    font_size: 40
                    text: root.month_spinner
#                    values: root.spinner_month_lst
#                    on_text: root.create_a_date_for_label_and_key_for_dict(self)
        BoxLayout:
            size_hint: 1, .2
            Label:
                id: Label_amount_date
                #text: "На дату:\n"+' '.join(root.label_month_lst)
                text: "На дату {ДАТА} уже есть сумма: {СУММА}"
                font_size: 30
                color: 0,0,0
        BoxLayout:
            id: Textinput_amount
            size_hint: 1, .4
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    #pos_hint: {"y":"center"}
                    BoxLayout:
                        id: quantity_rubel
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoney:
                            size_hint: .5,1
                            font_size: 60
                            text: "1234"
                            text_size: self.size
                            multiline: False
                        Label:
                            text: "РУБ"
                            size_hint: .5,1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.2
                        text: ""
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        id: quantity_kopeyka
                        padding: 30
                        size_hint: 1,.5
                        TextInpMoney:
                            size_hint: .3, 1
                            font_size: 60
                            text: "99"
                            multiline: False
                        Label:
                            text: "КОП"
                            size_hint: 1, 1
                            font_size: 50
                            bold: True
                            color: 0,0,0
                    Label:
                        size_hint: 1,.2
                        text: ""
        BoxLayout:
            size_hint: 1,.3
            padding: 10
            Button:
                text: "Посмотреть статистику"
                font_size: 40
        BoxLayout:
            size_hint:1,.3
            padding: [10,0,10,0]
            TextInput:
                id: Comments
                size_hint: 1,1
                font_size: 50
                hint_text: f"\n{(5*'\t')}комментарий"
                text: "Чай,сахар,булка"

        BoxLayout:
            size_hint:1,.1
            Label:
                text: "Сохранено"
                font_size: 40
                color: 1,0,0
                bold: True
        BoxLayout:
            size_hint:1,.3
            pos_hint: {"y":"bottom"}
            padding: 10
            spacing: 10
            Button:
                text: "Сохранить"
                font_size: 50
                color: 0,0,0
            Button:
                text: "Выход"
                font_size: 50
                color: 0,0,0
                on_release: app.quit_program()
        BoxLayout:
            size_hint: 1,.03
            padding:[0,10,0,10]
            Label:
                markup: True
                text: 'автор: Погодаев Илья Сергеевич [color=#0B0080][b] [ref=post]ilya1880@mail.ru[/ref][/b][/color]'

                color: 0,0,0







